        android:id="@+id/historyFragment"
        android:name="com.juan.legacy_ui.fragment.HistoryFragment"
        android:label="Historial de conversiones">
        <action
            android:id="@+id/action_history_to_detail"
            app:destination="@id/detailFragment">
            <argument
                android:name="id"
                app:argType="string" />
        </action>
    </fragment>

